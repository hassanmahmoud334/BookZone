@model Category
<form method="post">
	<input asp-for="Id" hidden />
	<div class="form-group p-3 mt-4">
		<div class="row pb-2">
			<div class="col-6">
				<h2 class="text-primary">
					Delete Category
				</h2>
			</div>
			<div class="col-6 text-end">
				<a class="btn btn-outline-primary" asp-controller="Category" asp-action="Index">
					<i class="bi bi-arrow-left-circle"></i> Back to List
				</a>
			</div>
		</div>
		<div>
			<label asp-for="Name" class="control-label">Category Name</label>
			<input asp-for="Name" disabled class="form-control" />
		</div>

	</div>
	<div class="form-group mb-3">
		<input type="submit" value="Delete" class="btn btn-outline-danger m-lg-3" />
	</div>
</form>
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}