@model IEnumerable<BookZone.Models.Category>
<partial name="_Notification"/>
<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">
			 CATEGORY LIST
			</h2>
		</div>
		<div class="col-6 text-end">
			<a class="btn btn-outline-primary" asp-controller="Category" asp-action="Create">
				<i class="bi bi-plus-circle"></i> Create New Category
			</a>
		</div>
	</div>
</div>
<table class="table table-borderd table-striped table-light">
	<thead>
		<tr>
			<th>
				Category Name
			</th>
			<th>Id</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
	@foreach (var item in Model.OrderBy(c=>c.Id)) {
		<tr>
			<td class="align-middle">
				@item.Name
			</td>
				<td class="align-middle">
				@item.Id
			</td>
				<td class="align-middle">
					<div class="d-flex justify-content-end">
						<a class="btn btn-outline-info rounded rounded-3 me-2 px-3 py-3" asp-action="Edit" asp-route-id="@item.Id">
							<i class="bi bi-pencil-square"></i>
						</a>
						<a class="btn btn-outline-danger rounded rounded-3 px-3 py-3" asp-action="Delete" asp-route-id="@item.Id">
							<i class="bi bi-trash3"></i>
						</a>
					</div>
				</td>
		</tr>
	}
	</tbody>
</table>